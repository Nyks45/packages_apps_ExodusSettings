<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="romcontrols"
        android:title="@string/rom_category_1">

        <!-- Home -->
        <PreferenceScreen
                android:key="home_settings"
                android:title="@string/home_settings"
                android:summary="@string/home_settings_summary"
                android:icon="@drawable/ic_home_settings"
                android:fragment="com.android.settings.HomeSettings"
                />

        <!-- #RomControl LCD Density -->
       <ListPreference
                android:key="lcd_density"
                android:title="@string/lcd_density"
                android:summary="@string/lcd_density_summary"
                android:icon="@drawable/ic_lcd_density"
                android:persistent="false"
                settings:advanced="true" />

    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/support_packages" />

        <!-- Updater -->
        <PreferenceScreen
            android:key="exodus_updates"
            android:title="@string/exodusupdate_settings_title"
            android:icon="@drawable/ic_qs_update"
            android:summary="@string/exodusupdate_settings_summary">
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.exodus.updater"
                android:targetClass="com.exodus.updater.UpdatesSettings"
                />
        </PreferenceScreen>

        <!-- SuperSU -->
        <PreferenceScreen
            android:key="supersu_settings"
            android:icon="@drawable/ic_settings_supersu"
            android:title="@string/supersu_title"
            android:summary="@string/supersu_summary">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="eu.chainfire.supersu"
                android:targetClass="eu.chainfire.supersu.MainActivity" />
        </PreferenceScreen>

        <!-- Xposed -->
        <PreferenceScreen
            android:key="xposed_settings"
            android:icon="@drawable/ic_xposed"
            android:title="@string/xposed_settings_title"
            android:summary="@string/xposed_summary" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="de.robv.android.xposed.installer.WelcomeActivity"
                android:targetPackage="de.robv.android.xposed.installer" />
        </PreferenceScreen>

        <!-- Viper4Android -->
        <PreferenceScreen
            android:key="viper_settings"
            android:icon="@drawable/ic_viper_android"
            android:title="@string/viper_settings_title"
            android:summary="@string/viper_summary" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="com.vipercn.viper4android_v2.activity.ViPER4Android"
                android:targetPackage="com.vipercn.viper4android_v2" />
        </PreferenceScreen>

</PreferenceScreen>
